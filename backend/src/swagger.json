{
    "swagger": "2.0",
    "info": {
      "version": "0.1.0",
      "title": "PolySoutenance API"
    },
    "host": "localhost:4000",
    "basePath": "/",
    "schemes": ["http"],
    "consumes": ["application/json"],
    "produces": ["application/json"],
    "paths": {
        "/serie": {
          "post": {
            "tags": ["Serie"],
            "summary": "Create a serie of defenses",
            "parameters": [
                {
                    "name": "serie",
                    "in": "body",
                    "schema": {
                        "$ref": "#/definitions/SerieCreation"
                      },
                    "required": true
                }
              ],
              "produces": ["application/json"],
              "responses": {
                "200": {
                  "description": "New serie is created"
                },
                "400": {
                  "description": "A field is missing"
                },
                "500": {
                  "description": "New serie is created"
                }
              }
          }
        }
      },
      "definitions": {
        "SerieCreation": {
          "required": ["label", "slots", "jurors", "students", "rooms"],
          "properties": {
            "label": {
              "type": "string"
            },
            "slots": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "start": {
                    "type": "datetime"
                  },
                  "end": {
                    "type": "datetime"
                  }
                }
              }
            },
            "rooms": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "number": {
                    "type": "string"
                  }
                }
              }
            },
            "jurors": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "firstName": {
                      "type": "string"
                    },
                    "lastName": {
                      "type": "string"
                    },
                    "email": {
                      "type": "string"
                    },
                    "master": {
                      "type": "boolean"
                    },
                    "infoRelated": {
                      "type": "boolean"
                    },
                    "studentNumber": {
                      "type": "string"
                    }
                  }
                }
              },
              "students": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "firstName": {
                      "type": "string"
                    },
                    "lastName": {
                      "type": "string"
                    },
                    "email": {
                      "type": "string"
                    },
                    "number": {
                      "type": "string"
                    }
                  }
                }
              }
          }
        }
      }
}
  